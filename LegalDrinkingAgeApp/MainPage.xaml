<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LegalDrinkingAgeApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to your Legal Drinking Age App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Choose a Country: "/>
        <RadioButton x:Name="UnitedStates" Content="United States" IsChecked="true" />
        <RadioButton x:Name="Iceland" Content="Iceland"/>
        <RadioButton x:Name="Spain" Content="Spain"/>
        <RadioButton x:Name="Italy" Content="Italy"/>
       
        <Label Text="Enter Your Birthday: "/>
        <DatePicker x:Name="Birthday"/>
        <Button Text="When can I drink?" Clicked="Handle_Clicked"/>
        <Label x:Name="Text"/>

    </StackLayout>

</ContentPage>
